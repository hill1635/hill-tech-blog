{{#each posts as |post| }}
<div class="card border-0 col-7 mx-auto my-5 p-3 shadow rounded">
    <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <h6 class="card-subtitle text-muted">{{user.username}}</h6>
        <hr>
        <h6 class="card-subtitle text-muted fst-italic">{{post.createdAt}} -</h6>
        <p class="card-text">{{post.content}}</p>
    </div>
    <div class="comments">
        <button class="btn border-0 ms-1 commentBtn">Comment</button>
    </div>
</div>
{{/each}}