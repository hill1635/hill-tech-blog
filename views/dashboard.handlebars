<div class="body">
{{#each myPosts as |myPost| }}
    {{!-- Cycle through all Post posts --}}
    <div class="myPost">
        <div class="header">
            <a href="">{{myPost.title}}</a>
            <p>Posted by you on {{myPost.createdAt}}</p>
        </div>
        <div class="content">
            <p>{{myPost.content}}</p>
        </div>
        <button class="editPost">Edit</button>
        <button class="deletePost">Delete</button>
    </div>
{{/each}}
</div>
    <button class="addPost">Add Post</button>